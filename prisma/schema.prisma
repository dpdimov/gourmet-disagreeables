generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  recipes   Recipe[]
}

model Recipe {
  id               Int      @id @default(autoincrement())
  title            String
  shortDescription String?
  category         String   @default("main")
  ingredients      String
  ingredientTags   String[]
  method           String
  comments         String?
  image            Json?
  sourceUrl        String?
  editKey          String?  @default(cuid())
  isVisible        Boolean  @default(true)
  createdAt        DateTime @default(now())
  createdBy        User?    @relation(fields: [createdById], references: [id])
  createdById      String?
  riffedFromId     Int?
  riffedFrom       Recipe?  @relation("Riffs", fields: [riffedFromId], references: [id])
  riffs            Recipe[] @relation("Riffs")
}
